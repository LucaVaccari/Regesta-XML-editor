<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ResponsivePopover id="myPopover" title="Attributes" class=" sapUiContentPadding" placement="Bottom">
		<beginButton>
			<Button icon="sap-icon://add" press="onAddAttribute" tooltip="Add a new attribute to this element" />
		</beginButton>
		<endButton>
			<Button icon="sap-icon://delete" press="onClearAttributes" tooltip="Remove all attributes of this element" />
		</endButton>
		<content>
			<ScrollContainer>
				<List noDataText="No attributes" id="attributesList" mode="Delete" delete="onRemoveAttribute" items="{path:'/selectedAttributes', templateShareable: false}">
					<CustomListItem cd:id="{id}">
						<HBox >
							<Input value="{attributeKey}" change="onAttributesModify" submit="onAttributesModify" liveChange="onAttributeNameModifyLive" cd:id="{id}" />
							<Input value="{attributeValue}" change="onAttributesModify" submit="onAttributesModify" liveChange="onAttributeValueModifyLive" cd:id="{id}" />
						</HBox>
					</CustomListItem>
				</List>
			</ScrollContainer>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>