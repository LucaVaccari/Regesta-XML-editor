<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<App>
		<Page id="page">
			<FlexBox class="sapUiResponsiveMargin" width="auto">
				<Tree showNoData="false" items="{path: '/data', templateShareable: false}" id="tree">
					<items>
						<CustomTreeItem cd:id="{id}">
							<Input value="{key}" visible="false" submit="onKeySubmit" />
							<Button text="{key}" visible="true" press="onKeyEdit" />
							<Input value="{value}" visible="false" submit="onValueSubmit" />
							<Button text="{value}" visible="true" press="onValueEdit" />
							<Button text="+" press="onAdd" />
							<Button text="-" press="onRemove" />
							<Button text="Duplicate" press="onDuplicate" />
							<Button text="MoveUp" press="onMoveUp" />
							<Button text="MoveDown" press="onMoveDown" />
						</CustomTreeItem>
					</items>
				</Tree>
				<Panel visible="false" id="xmlView" class="sapUiResponsiveMargin">
					<Text renderWhitespace="true" text="{/xml}" id="xmlText" class="test" />
				</Panel>
			</FlexBox>
			<footer>
				<Bar>
					<contentLeft>
						<Button text="Cancel" press="onCancel" class="test" />
					</contentLeft>
					<contentMiddle>
						<Button text="Undo" press="onUndo" id="undoButton" />
						<Button text="Reset" press="onReset" id="resetButton" />
						<Button text="Redo" press="onRedo" id="redoButton" />
					</contentMiddle>
					<contentRight>
						<Button text="Show XML" press="onToggleXML" id="xmlButton" />
						<Button text="Export" press="onExport" />
					</contentRight>
				</Bar>
			</footer>
		</Page>
	</App>
</mvc:View>